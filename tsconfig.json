{
  "compilerOptions": {
    "baseUrl": "src/browser",
    "sourceMap": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "pretty": true,
    "removeComments": true,
    "strictNullChecks": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules"]
}
